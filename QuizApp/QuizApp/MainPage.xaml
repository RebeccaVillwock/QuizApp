<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuizApp.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Personality Quiz" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Are You an Intorvert or Extrovert" FontSize="Title" Padding="30,10,30,10"/>
        
        
        
        <Label x:Name="QuestionNumber"
            Text="Question One"/>
        <Label x:Name="QuestionContent"
            Text="Do you like being in crowded places"/>


        <Button Text="True"
                x:Name="TrueButton"
                TextColor="Purple"
                HorizontalOptions="Center"
                Clicked="OnButtonClicked"/>
        
        <Button Text="False"
                x:Name="FalseButton"
                TextColor="DarkGreen"
                HorizontalOptions="Center"
                Clicked="OnButtonClicked"/>
    </StackLayout>

</ContentPage>
